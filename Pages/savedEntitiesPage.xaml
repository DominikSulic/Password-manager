<Page x:Class="Pasword_Manager.savedEntitiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pasword_Manager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="savedEntitiesPage">

    <Grid>

        <ListBox x:Name="lbEntities" SelectionMode="multiple" HorizontalAlignment="Left" Height="278" Margin="32,38,0,0" VerticalAlignment="Top" Width="328" SelectionChanged="LbEntities_SelectionChanged"/>
        <ListBox x:Name="lbPreview" SelectionMode="multiple" HorizontalAlignment="Left" Height="278" Margin="432,38,0,0" VerticalAlignment="Top" Width="332"/>
        <Button Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="112,364,0,0" VerticalAlignment="Top" Width="178" Height="48" Click="BtnDelete_Click"/>
        <Button Name="btnAlter" Content="Alter" HorizontalAlignment="Left" Margin="504,364,0,0" VerticalAlignment="Top" Width="178" Height="48" Click="BtnAlter_Click"/>

    </Grid>
</Page>
