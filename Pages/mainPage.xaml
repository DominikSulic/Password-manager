<Page x:Class="Pasword_Manager.mainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pasword_Manager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="mainPage">

    <Grid>
        <Button x:Name="btnNewEntity" Content="ADD NEW" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="75" Click="BtnNewEntity_Click" FontSize="18"  Foreground="GhostWhite" Background="SlateGray" FontFamily="Helvetica"></Button>
        <Button x:Name="btnOptions" Content="OPTIONS" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="74"  Click="BtnOptions_Click" Margin="500,0,0,0" FontSize="18"  Foreground="GhostWhite" Background="SlateGray" FontFamily="Helvetica"></Button>
        <Button x:Name="btnSavedEntities" Content="SAVED ENTITIES" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="74"  Click="BtnSavedEntities_Click" Margin="0,0,500,0" FontSize="18"  Foreground="GhostWhite" Background="SlateGray" FontFamily="Helvetica"></Button>

    </Grid>
</Page>
