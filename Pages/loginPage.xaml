<Page x:Class="Pasword_Manager.loginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pasword_Manager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="loginPage">

    <Grid>
        <Image Source="/Pictures/logo.png" Width="400" Margin="200,25,200,255"/>
        <TextBox x:Name="txtMasterPasswordInput" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" FontSize="40" TextWrapping="Wrap"  Width="192"/>


        <Button Name="btnLogIn" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="auto" Margin="0,170,0,0" Click="btnLogIn_Click">
            <StackPanel>
                <Image Source ="/Pictures/login.png"/>
            </StackPanel>
        </Button>



    </Grid>
</Page>
